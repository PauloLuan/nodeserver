extends layout

block content
	div.row
		div.col-lg-12
			h1.page-header=website.name


	div.row
		div.col-lg-8
			div(class='panel panel-' + ((website.process.running) ? 'success' : 'danger'))
				div.panel-heading
					i.fa.fa-sitemap.fa-fw
					|Status - 
					=((website.process.running) ? 'started' : 'stopped')
				div.panel-body
					h4 Operations
					button.btn.btn-success.btn-circle.btn-xl(type='buton' title='start' onclick='document.location="/websites/' + website.bindings[0] + '/start"')
						i.fa.fa-bolt
					button.btn.btn-warning.btn-circle.btn-xl(type='buton' title='restart' onclick='document.location="/websites/' + website.bindings[0] + '/restart"')
						i.fa.fa-power-off
					button.btn.btn-danger.btn-circle.btn-xl(type='buton' title='stop' onclick='document.location="/websites/' + website.bindings[0] + '/stop"')
						i.fa.fa-square

		div.col-lg-4
			div.panel.panel-default
				div.panel-heading
					i.fa.fa-sitemap.fa-fw
					|Bindings
				div.panel-body
					div.list-group
						each binding in website.bindings
							a.list-group-item(href="http://" + binding target='_blank')
								i.fa.fa-cloud.fa-fw
								=binding
								span.pull-right.text-muted.small
									em link